<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/profileFragment">

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.BrgyOneStop.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_announcementsFragment"
            app:destination="@id/announcementsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
    </fragment>

    <!-- Announcements Fragment -->
    <fragment
        android:id="@+id/announcementsFragment"
        android:name="com.brgyonestop.AnnouncementsFragment"
        android:label="Announcements"
        tools:layout="@layout/fragment_announcements" >
        <action
            android:id="@+id/action_announcementsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_announcementsFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
    </fragment>

    <!-- Feedback Fragment -->
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.yourpackage.FeedbackFragment"
        android:label="Feedback"
        tools:layout="@layout/fragment_feedback" >
        <action
            android:id="@+id/action_feedbackFragment_to_announcementsFragment"
            app:destination="@id/announcementsFragment" />
        <action
            android:id="@+id/action_feedbackFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:textColor="@color/primary"
        android:textSize="45dp"
        android:fontFamily="@font/inter_black"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your username"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your email"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_phonenumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your phone number"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="phone"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your password"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_confirmpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Re-enter your password"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <Button
        android:id="@+id/button_register1_next"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Next"
        android:layout_gravity="center"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/button_register1_cancel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        android:layout_gravity="center"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/white"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_f1backarrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/forgotpassword_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:letterSpacing=".05"
        android:text="Forgot Password"
        android:textColor="@color/secondary"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_black"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter your email address below and we'll send you a code."
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="e.g sample@email.com"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/button_resetpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Reset Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/leftarrow"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="File Complaint"
            android:fontFamily="sans-serif-condensed"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="113dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Welcome! Please use the form below to submit your complaint to the barangay. Your concerns are important to us."
        android:textStyle="italic"
        android:textColor="#686565"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="590dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/second_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Complaint Form"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="21sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Category Selection:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginLeft="7dp"/>
        <Spinner
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:entries="@array/my_dropdown_items"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Complaint Details:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/multilineTextBox"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Please enter complaint details here ..."
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|start"
            android:background="@color/white"
            android:padding="12dp"
            android:textSize="17sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Attachments:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="CHOOSE FILE(S)"
            android:backgroundTint="@color/primary_button"
            android:textColor="@color/white"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Anonymous Option:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"/>
        <CheckBox
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginLeft="27dp"
            android:text="File this complaint anonymously (if applicable)"/>
        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="SUBMIT COMPLAINT"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="@color/primary_button"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="CANCEL"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@color/primary_button"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/leftarrow"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:text="File Complaint"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="110dp"/>
            </LinearLayout>

            <!-- Intro Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome! Please use the form below to submit your complaint to the barangay. Your concerns are important to us."
                android:textStyle="italic"
                android:textColor="#686565"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:paddingVertical="10dp"/>

            <!-- Form Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/second_background"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/second_background"
                android:clipToPadding="false">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complaint Form"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="21sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>

                <!-- Category -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Selection:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:entries="@array/filecomplaint_items"
                    android:layout_marginTop="11dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complaint Details:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="17sp"
                    android:layout_marginTop="21dp"/>

                <EditText
                    android:id="@+id/multilineTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter complaint details here ..."
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:textSize="17sp"
                    android:layout_marginTop="11dp"/>

                <!-- Attachments -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attachments:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHOOSE FILE(S)"
                    android:backgroundTint="@color/primary_button"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"/>

                <!-- Anonymous Option -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anonymous Option:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File this complaint anonymously (if applicable)"
                    android:layout_marginTop="4dp"/>

                <!-- Submit & Cancel -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="SUBMIT COMPLAINT"
                    android:layout_marginTop="25dp"
                    android:background="@color/primary_button"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="CANCEL"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary_button"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

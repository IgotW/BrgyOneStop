<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassword3Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_f3backarrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/create_new_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set-up Password"
        android:textSize="35sp"
        android:textColor="@color/secondary"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:letterSpacing=".1"
        android:fontFamily="@font/inter_black"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create your new password and make sure to remember it this time."
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_forgot3_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="Enter new password"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_forgot3_confirmpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="Re-enter password"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <Button
        android:id="@+id/button_forgotsubmit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>
</LinearLayout>
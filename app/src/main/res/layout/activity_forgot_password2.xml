<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassword2Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_f2backarrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/confirmation_code"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation Code"
        android:textSize="30sp"
        android:textColor="@color/secondary"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:letterSpacing=".1"
        android:fontFamily="@font/inter_black"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter the confirmation code that sent to your email address"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/edittext_forgot2_code1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_edittext"
            android:layout_margin="10dp"
            android:hint="0"
            android:maxLength="1"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edittext_forgot2_code2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_edittext"
            android:layout_margin="10dp"
            android:hint="0"
            android:maxLength="1"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edittext_forgot2_code3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_edittext"
            android:layout_margin="10dp"
            android:hint="0"
            android:maxLength="1"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edittext_forgot2_code4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_edittext"
            android:layout_margin="10dp"
            android:hint="0"
            android:maxLength="1"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_sendcode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Send"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageview_allcomplaints_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:clickable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Detail"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- Office Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office 1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />


            <!-- Description Card -->
            <TextView
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="Description of the office: example example example example..."
                android:padding="12dp"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:layout_gravity="center"/>


            <!-- Location Card -->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/second_background"
                android:background="@drawable/rounded_shape"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:text="Location:"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="Description of the office: example example example..."
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/second_background"
                android:background="@drawable/rounded_shape"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:text="Office Hours:"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:text="10:00 am - 11:00 pm"
                    android:layout_marginTop="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Contact Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center">


                <!-- Phone 1 -->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#000" />


                    <LinearLayout
                        android:layout_width="275dp"
                        android:layout_height="50dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  09XX XXX XXXX"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:paddingStart="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Mobile"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:paddingStart="8dp" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Phone 2 -->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#000" />


                    <LinearLayout
                        android:layout_width="275dp"
                        android:layout_height="50dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  09XX XXX XXXX"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:paddingStart="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Mobile"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:paddingStart="8dp" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Landline -->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#000" />


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  09XX XXX XXXX"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:paddingStart="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Mobile"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:paddingStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

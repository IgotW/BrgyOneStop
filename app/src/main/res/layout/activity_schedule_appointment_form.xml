<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/imageview_allcomplaints_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:clickable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Appointment"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textStyle="italic"
                    android:textColor="#686565"
                    android:textSize="13sp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="10dp"
                    android:text="The available dates and time slots displayed below are based on the official working hours of the barangay and the remaining available slots for each service. Once a time slot is fully booked, it will no longer appear in the list." />
                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="@color/second_background"
                    android:background="@drawable/rounded_shape"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="Title"
                        android:textSize="17sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>
                    <EditText
                        android:id="@+id/scheduleappointment_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Enter Title"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_shape"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="Choose Date "
                        android:textSize="17sp"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>
                    <EditText
                        android:id="@+id/scheduleappointment_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Choose Prefered Date"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_shape"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="Choose Time: "
                        android:textSize="17sp"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>
                    <EditText
                        android:id="@+id/scheduleappointment_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Choose Prefered Time"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_shape"
                        android:padding="10dp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="What for? "
                        android:textSize="17sp"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/scheduleappointment_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Enter reason"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_shape"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/scheduleappointment_button"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/primary_button"
                    android:text="SCHEDULE APPOINTMENT"
                    android:background="@drawable/rounded_shape"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

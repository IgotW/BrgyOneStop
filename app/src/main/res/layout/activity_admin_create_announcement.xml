<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminCreateAnnouncementActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageview_create_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Announcement"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edittext_create_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_transparent_border"
        android:backgroundTint="@color/primary"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Enter your title here"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/textinputedittext_create_description"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_transparent_border"
        android:hint="Enter your description here"
        android:backgroundTint="@color/primary"
        android:paddingLeft="15dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:paddingTop="10dp"/>
    <Button
        android:id="@+id/button_create_post"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Post"
        android:textSize="18sp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register2Activity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:textColor="@color/primary"
        android:textSize="45dp"
        android:fontFamily="@font/inter_black"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_firstname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your firstname"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middle Name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_middlename"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter Middle Name"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_lastname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter Last Name"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suffix"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edittext_reg_suffix"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="e.g Jr., Sr., II"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="15dp"/>
    <Button
        android:id="@+id/button_register2_next"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Next"
        android:layout_gravity="center"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_register2_cancel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_shape"
        android:text="Back"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/white"/>


</LinearLayout>
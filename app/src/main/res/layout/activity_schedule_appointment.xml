<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/imageview_allcomplaints_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:clickable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Appointment"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:text="Welcome to the Brgy One-Stop appointment scheduling page! To help you efficiently access the services you need, please follow the steps below to book your appointment."
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="1. Select the Service: Choose the service you need from the list below. Each service may have specific requirements or documents, so please check the details carefully."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="2. Choose a Date and Time: Pick a date and time that works for you from the available slots. Make sure to book your appointment in advance to avoid long waiting times."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="3. Upload Required Documents: Some services may require you to upload documents before your appointment. Be sure to have these ready."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="4. Confirm Your Appointment: Once you’ve entered your details, we’ll show you a summary of your appointment. Review it and confirm your booking. You will receive a notification with your appointment details."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="17dp"
                    android:text="Reminders:"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="- Arrive at least 10 minutes before your scheduled appointment time."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="- Bring all required documents listed below along with a valid ID for verification."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="- If you are unable to attend, please reschedule or cancel your appointment ahead of time."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:paddingLeft="35dp"
                    android:paddingRight="17dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="- Late arrivals may need to rebook based on staff availability."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:text="Need help? If you have any questions or need assistance, feel free to check out our FAQs or contact us at [contact number/email]."
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/scheduleappointment_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="19dp"
                    android:backgroundTint="@color/primary_button"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:text="SCHEDULE APPOINTMENT" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:elevation="4dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/home"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/inbox"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/history"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/emergencyButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/call"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:elevation="8dp"
        android:padding="3dp"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="8dp"
        android:text="Call"
        android:layout_marginBottom="7dp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-condensed"/>
</RelativeLayout>